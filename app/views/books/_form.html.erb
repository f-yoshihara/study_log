<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <%= book.errors.full_messages do |message| %>
        <%= message %>
      <% end %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, 'タイトル' %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :isbn, 'isbn' %>
    <%= form.text_field :isbn %>
  </div>

  <div class="field">
    <%= form.label :price, '値段' %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :pages, 'ページ数' %>
    <%= form.number_field :pages %>
  </div>

  <div class="field">
    <%= form.label :bought_at, '買った日' %>
    <%= form.date_select :bought_at %>
  </div>  

  <div class="field">
    <%= form.label :purpose, 'これを学ぶ目的は？' %>
    <%= form.text_area :purpose %>
  </div>


  <%= form.fields_for : do |school_form| %>
    <div class="field">
      <%= school_form.label :name, '学校名' %>
      <%= school_form.text_field :name, class: 'form-control typeahead', id: 'school_name', autocomplete: 'on' %>
    </div>

    <div class="field">
      <%= school_form.select :category, School.categories.map { |k, v| [t("school.category.#{k}"), k]}%>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>