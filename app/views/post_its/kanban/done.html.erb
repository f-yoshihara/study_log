<h1>done <%= fa_icon("check") %></h1>

<%= link_to("post-it作成", new_post_it_path) %>

<% @done.each do |post_it| %>
  <p>
    <%= link_to(post_it.memo, "/post_its/parts/#{post_it.id}") %>
    <%= link_to fa_icon("edit"), edit_post_it_path(post_it), class: :'btn btn-light' %>
    <%= link_to fa_icon("folder"), post_it_path(post_it, post_it: {status: :backlog}), method: :patch, class: :'btn btn-secondary' %>
    <%= link_to fa_icon("folder-open"), post_it_path(post_it, post_it: {status: :in_progress}), method: :patch, class: :'btn btn-success' %>
    <%= link_to fa_icon("trash"), post_it_path(post_it, post_it: {status: :deleted}), method: :patch, class: :'btn btn-info' %>
  </p>
<% end %>

<%= link_to '戻る', url_for(:back) %>